      <tr>
        <td><%= @post.title %></td>
        <td><%= @post.body %></td>
        <td><%= link_to 'Show', post_path(@post) %></td>

        <% if policy(@post).update? %>
          <td><%= link_to 'Edit', edit_post_path(@post) %></td>
        <% end %>
        <% if policy(@post).destroy? %>
          <td><%= link_to 'Destroy', post_path(@post), id: "destroy", remote:true,  method: :delete, data: { confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
