
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<!--Publish button visible for editor-->


<!--add new comments-->
<%= render 'comments/form' %>

<!--Display Comments-->

<%= render 'comments/index' %>

<!---Display approval button for authors/editors-->
<%= render 'comments/approve' %>

<% if policy(@post).update? %>
  <td><%= link_to 'Edit', edit_post_path(:post_id) %></td>
<% end %>
<%= link_to 'Back', posts_path %> |

