
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p id="author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished" %>
</p>

<!--Publish button visible for editor-->


  <!--add new comments-->
<%= render 'comments/form' %>

<!--Display Comments-->
<%= render 'comments/index' %>

<% unless current_user.user? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %> |

